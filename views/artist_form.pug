extends layout 

block content 
    h1=title

    form(method='POST' action='')
        div.form-group 
            label(for='name') Name:
            input.form-control(
                type='text', 
                placeholder='Tinashe',
                name='name',
                required='true',
                value=(artist===undefined ? '' : artist.name)
                )
        button(type='submit') Submit

    if errors 
        ul 
            for error in errors     
                li!=error.msg