extends layout 

block content 
    h1=title

    form(method='POST' action='')
        div.form-group
            label(for='name') Genre: 
            input.form-control(
                type="text"
                required='true'
                placeholder='Folk, Pop, etc.'
                value=(genre===undefined ? '' : genre.name)
                )
        button(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!=error.msg