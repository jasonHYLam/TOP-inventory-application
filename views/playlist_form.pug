extends layout 

block content 

    h1=title 

    form(method='POST' action='')
        div.form-group
            label(for='name') Playlist Name
            input.form-control(
                type='text',
                placeholder='For studying',
                required='true',
                name='name',
                value=(playlist===undefined ? '' : playlist.name),
            )

        button(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!=error.msg
